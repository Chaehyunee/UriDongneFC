<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/oseong_haneum_regular"
            android:letterSpacing="0.03"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="선수님,\n사용할 계정의 정보를 입력해 주세요."
            android:textColor="@color/black"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/person" />

            <EditText
                android:id="@+id/regist_player_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="이름"
                android:textColorHint="#aaaaaa"
                android:textColor="@color/black"
                android:background="@drawable/text_underline_design"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/regist_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="이메일"
                android:textColor="@color/black"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/text_underline_design"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/key" />

            <EditText
                android:id="@+id/regist_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="비밀번호"
                android:inputType="textPassword"                 android:textColor="@color/black"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/text_underline_design"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/key" />

            <EditText
                android:id="@+id/regist_checkpw"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/text_underline_design"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/regist_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="전화번호"
                android:inputType="text|phone"
                android:textColor="@color/black"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/text_underline_design"/>

        </LinearLayout>

        <Button
            android:id="@+id/regist_button"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4b8031"
            android:fontFamily="@font/oseong_haneum_regular"
            android:textSize="17dp"
            android:text="회원가입" />
    </LinearLayout>
</LinearLayout>