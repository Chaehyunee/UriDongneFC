<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="235dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:gravity="clip_horizontal|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/login_id" />

            <EditText
                android:id="@+id/Login_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:ems="12"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="E-mail"
                android:textColorHint="#aaaaaa"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/text_underline_design" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="clip_horizontal|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/login_pw" />

            <EditText
                android:id="@+id/Login_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:ems="12"
                android:fontFamily="@font/oseong_haneum_regular"
                android:hint="비밀번호"
                android:textColorHint="#aaaaaa"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:background="@drawable/text_underline_design" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/find_email_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:fontFamily="@font/oseong_haneum_regular"
                android:text="E-mail / PW 찾기"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:clickable="true"
                android:fontFamily="@font/oseong_haneum_regular"
                android:text="회원가입"
                android:textColor="#000000"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="150dp"
        android:layout_weight="0"
        android:backgroundTint="#4b8031"
        android:gravity="center"
        android:textSize="17dp"
        android:text="로그인"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</LinearLayout>