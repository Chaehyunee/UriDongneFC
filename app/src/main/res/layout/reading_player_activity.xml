<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- 뒤로가기, 팀 아이콘, 팀명, 연락하기 버튼 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/previous_blue"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:clickable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp">


            <ImageView
                android:id="@+id/player_icon"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="40dp"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/reading_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/oseong_haneum_regular"
                android:paddingHorizontal="20dp"
                android:text="[ 홍길동 ]"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/player_contact_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/contact"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginRight="10dp"/>


    </LinearLayout>


    <!-- 팀 글 타이틀 -->
    <TextView
        android:id="@+id/reading_player_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oseong_haneum_regular"
        android:text="팀 찾아요~!"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_underline_design"
        />


    <!-- 요일 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="가능한 요일"
            android:fontFamily="@font/oseong_haneum_regular"/>


        <TextView
            android:id="@+id/reading_player_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oseong_haneum_regular"
            android:text="토, 일"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>


    <!-- 시간대 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="가능 시간대"
            android:fontFamily="@font/oseong_haneum_regular"/>


        <TextView
            android:id="@+id/reading_player_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oseong_haneum_regular"
            android:text="오후 3시 ~ 6시"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>


    <!-- 나이 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="나이"
            android:fontFamily="@font/oseong_haneum_regular"/>


        <TextView
            android:id="@+id/reading_player_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oseong_haneum_regular"
            android:text="31세"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="92dp"/>



    </LinearLayout>

    <!-- 희망 포지션 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="희망 포지션"
            android:fontFamily="@font/oseong_haneum_regular"/>


        <TextView
            android:id="@+id/reading_player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oseong_haneum_regular"
            android:text="공격수"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>



    </LinearLayout>


    <!-- 설명글 -->
    <TextView
        android:id="@+id/reading_player_info"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="40dp"
        android:background="@drawable/textbox_design"
        android:lineSpacingExtra="5dp"
        android:padding="15dp"
        android:text="실력 나쁘지 않고요 열정 넘칩니다\n공 차고 싶습니다!\n회식 가능하고 선출은 아닙니다 연락 주세요"
        android:textColor="@color/black"
        android:textSize="17dp" />


</LinearLayout>